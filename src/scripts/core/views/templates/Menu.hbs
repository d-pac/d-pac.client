        <div class="collapse navbar-collapse" id="primary-navigation">
            <ul class="nav navbar-nav navbar-right">
                {{#if permissions.allowed.account.view}}
                    <li>
                        <p class="navbar-text">
                            <span class="label label-info">{{t "common:menu.text.label" userName=user.name.first}}</span>
                        </p>
                    </li>
                {{/if}}
                {{#if permissions.allowed.tutorial.view}}

                    <li>
                        <a href="{{t "common:menu.tutorial.href"}}"
