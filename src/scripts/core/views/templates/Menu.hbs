                    <li>
                        <a href="{{t "common:menu.results.href"}}"
                           data-toggle="tooltip" data-placement="bottom"
                           title="{{t "common:menu.results.description"}}">{{t "common:menu.results.label"}}</a>
                    </li>
                {{/if}}
                {{#if permissions.allowed.account.view}}
                    <li>
                        <a href="{{t "common:menu.account.href"}}"
                           data-toggle="tooltip" data-placement="bottom"
                           title="{{t "common:menu.account.description"}}">{{t "common:menu.account.label"}}</a>
