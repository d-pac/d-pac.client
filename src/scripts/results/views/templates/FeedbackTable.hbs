{{#if feedback.length}}
    <h4>{{t "results:representation_feedback.title" name=representation.name}}</h4>
    <table class="table table-bordered table-striped" style="width:100%;">
        <thead>
            <tr>
                <td>{{ t "results:representation_feedback.assessor"}}</td>
                <td>{{ t "results:representation_feedback.positive"}}</td>
                <td>{{ t "results:representation_feedback.negative"}}</td>
            </tr>
        </thead>
        <tbody>
        {{#each feedback}}
            <tr>
                <td  style="min-width: 180px;">{{ t "results:representation_feedback.anonymized" num=anon}}</td>
                <td width="50%"> {{{positive}}}</td>
                <td width="50%">{{{negative}}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
{{/if}}
