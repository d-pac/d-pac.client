{{#if feedback.length}}
    <h4>{{t "results:representation_feedback.title" name=representation.name}}</h4>
    <div class="list-group">
        {{#each feedback}}
            <div class="list-group-item">
                <!--<div class="row-action-primary">-->
                <!--<i class="material-icons">folder</i>-->
                <!--</div>-->
                <div class="row-content">
                    <div class="least-content">{{ t "results:representation_feedback.anonymized" num=anon}}</div>
                    <h6 class="list-group-item-heading">Positive</h6>

                    <p class="list-group-item-text">{{{positive}}}</p>
                </div>
                <div class="row-content">
                    <h6 class="list-group-item-heading">Negative</h6>

                    <p class="list-group-item-text">{{{negative}}}</p>
                </div>
            </div>
            <div class="list-group-separator"></div>
        {{/each}}
    </div>
{{/if}}
