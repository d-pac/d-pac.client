<div class="row">
    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4 column">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>{{t "assess:comparison_messages.title"}}</h4>
            </div>

            <div class="panel-body">
                <p>{{t "assess:comparison_messages.description" title=assessment.title}}</p>
                <ul>
                    {{#each messages}}
                        <li>{{{this}}}</li>
                    {{/each}}
                </ul>
                <a href="#assess" class="btn btn-success pull-right"
                   role="button">{{t "assess:comparison_messages.stop_button.label"}}</a>
            </div>
        </div>
    </div>
</div>
