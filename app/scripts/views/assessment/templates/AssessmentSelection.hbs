{{#if items.length }}
    <div class="row clearfix">
        <div class="col-md-12 column">
            <div class="alert alert-info" role="alert">
                <p>{{t "assessment:selection.description"}}</p>
            </div>
            <div class="alert-region"></div>
        </div>
    </div>
    <div class="row clearfix">
        <div class="col-md-6 col-md-offset-3 column">
            {{#each items}}
                <div>
                    <!-- TODO: we need to find out why `data-model-id="{{id}}"` doesn't work -->
                    <button type="button" class="btn btn-default btn-lg btn-block"
                            data-model-id="{{_id}}">{{ title }}</button>
                </div>
            {{/each}}
        </div>
    </div>
{{else}}
    <div class="row clearfix">
        <div class="col-md-12 column">
            <div class="alert alert-warning" role="alert">
                <p>{{t "assessment:selection.empty.title"}}</p>
            </div>
            <div class="alert-region">
                <p>{{t "assessment:selection.empty.description"}}</p>
            </div>
        </div>
    </div>
{{/if}}
