                </ul>
            </div>
            <div>
                <button id="submit-seq-button" type="button" class="btn btn-primary{{#unless seq.selected}} disabled{{/unless}}">
                    {{t "assessment:seq.save_button.label"}}
                </button>
            </div>
    </div>
