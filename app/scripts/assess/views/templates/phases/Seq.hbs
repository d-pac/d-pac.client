                <ul class="pagination pagination-md">
                    <li class="disabled"><a href="javascript:void(0)">{{{t "assessment:seq.easy.label"}}}</a></li>
                    {{#each seq.values}}
                        <li {{#if this.selected}}class="active"{{/if}}><a href="javascript:void(0)" data-value="{{this.value}}" class="seq-button">{{this.value}}</a></li>
                    {{/each}}
