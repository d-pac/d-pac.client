{{#if items.length }}
    <div class="row">
        <div class="col-md-12 column">
            <div class="alert alert-info" role="alert">
                {{#if allCompleted}}
                    <h4>{{t "assessment:selection.thanks.title"}}</h4>
                    <p>{{t "assessment:selection.thanks.list.description"}}</p>
                {{else}}
                    <h4>{{t "assessment:selection.plain.title"}}</h4>
                    <p>{{t "assessment:selection.plain.list.description"}}</p>
                {{/if}}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3 column">
            {{#each items}}
                <div>
                    <!-- TODO: we need to find out why `data-model-id="{{id}}"` doesn't work -->
                    <button type="button" class="btn btn-default btn-lg btn-block"
                            data-model-id="{{_id}}">{{ title }}</button>
                </div>
            {{/each}}
        </div>
    </div>
{{else}}
    <div class="row">
        <div class="col-md-12 column">
            <div class="alert alert-warning" role="alert">
                {{#if allCompleted}}
                    <h4>{{t "assessment:selection.thanks.title"}}</h4>
                    <p>{{t "assessment:selection.thanks.empty.description"}}</p>
                {{else}}
                    <h4>{{t "assessment:selection.plain.title"}}</h4>
                    <p>{{t "assessment:selection.plain.empty.description"}}</p>
                {{/if}}
            </div>
        </div>
    </div>
{{/if}}
