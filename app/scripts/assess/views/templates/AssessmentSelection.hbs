<div class="row">
    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4 column">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>{{t "assessment:assessment_selection.title"}}</h4>
            </div>
            {{#if items.length }}
                <div class="panel-body">
                    <p>{{t "assessment:assessment_selection.description"}}</p>
                    {{#each items}}
                        <button type="button" class="btn btn-primary btn-block assessment-button" data-model-id="{{_id}}">
                            {{title}}
                        </button>
                    {{/each}}
                </div>
            {{else}}
                <div class="panel-body">
                    <p>{{t "assessment:assessment_selection.empty"}}</p>
                </div>
            {{/if}}
        </div>
    </div>
</div>
