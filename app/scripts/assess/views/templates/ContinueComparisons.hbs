<div class="row">
    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4 column">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>{{t "assessment:comparison_continue.title"}}</h4>
            </div>
            <div class="panel-body">
                <p>{{t "assessment:comparison_continue.description" assessment=title}}</p>

                <p>
                    <button id="continue-button" type="button" class="btn btn-primary"
                            data-sending-text="{{t "assessment:comparison_continue.continue_button.sending"}}">
                        {{t "assessment:comparison_continue.continue_button.label"}}
                    </button>
                    <a href="#welcome" class="btn btn-danger" role="button">{{t "assessment:comparison_continue.stop_button.label"}}</a>
                </p>
            </div>
        </div>
    </div>
</div>
