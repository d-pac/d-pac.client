<div class="row clearfix">
    <div class="col-md-12 column">
        <div class="alert alert-info" role="alert">
            <p>{{t "account:description"}}</p>
        </div>
    </div>
</div>
<div class="row clearfix">
    <div class="col-md-6 col-md-offset-3 column">
        <div class="row clearfix">
            <div class="col-md-12 column">
                <form role="form" class="form-horizontal">
                    <div class="form-group">
                        <label for="firstname" class="col-md-4">{{t "account:name.first.label"}}</label>

                        <div class="col-md-8">
                            <input type="text" class="form-control" id="firstname" placeholder="{{t "account:name.first.description"}}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="surname" class="col-md-4">{{t "account:name.last.label"}}</label>

                        <div class="col-md-8">
                            <input type="text" class="form-control" id="surname" placeholder="{{t "account:name.last.description"}}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="organisation" class="col-md-4">{{t "account:organisation.label"}}</label>

                        <div class="col-md-8">
                            <select id="organisation" class="form-control">
                                <option>{{t "account:organisation.description"}}</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email" class="col-md-4">{{t "account:email.label"}}</label>

                        <div class="col-md-8">
                            <input type="email" class="form-control" id="email"
                                   placeholder="{{t "account:email.description"}}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="col-md-4">{{t "account:password.label"}}</label>

                        <div class="col-md-8">
                            <input type="password" class="form-control" id="password"
                                   placeholder="{{t "account:password.description"}}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password-confirmation" class="col-md-4">{{t "account:password.confirmation.label"}}</label>

                        <div class="col-md-8">
                            <input type="password" class="form-control" id="password-confirmation"
                                   placeholder="{{t "account:password.confirmation.description"}}">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">{{t "account:submit.label"}}</button>
                </form>
            </div>
        </div>
    </div>
</div>
