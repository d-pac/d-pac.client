<div class="row">
    <div class="col-md-4 col-md-offset-4 column">
        <div class="well well-sm">
            <h4>{{t "login:description"}}</h4>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4 col-md-offset-4 column">
        <div class="jumbotron">
            {{#if authenticated}}
                <div>{{{t "login:authenticated"  userName=user.name.first}}}</div>
                <div class="toolbar">
                    <button type="button" class="btn btn-primary">Tutorial</button>
                    <button type="button" class="btn btn-primary">Beoordeel</button>
                </div>
            {{else}}
                <form role="form" class="form-horizontal">
                    <div class="form-group">
                        <label for="email" class="col-md-4">{{t "login:email.label"}}</label>

                        <div class="col-md-8">
                            <input type="email" class="form-control" id="email"
                                   placeholder="{{t "login:email.description"}}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="col-md-4">{{t "login:password.label"}}</label>

                        <div class="col-md-8">
                            <input type="password" class="form-control" id="password"
                                   placeholder="{{t "login:password.description"}}">
                        </div>
                    </div>
                    <button type="button"
                            class="btn btn-primary login-btn pull-right">{{t "login:submit.label"}}</button>
                </form>
            {{/if}}

        </div>
    </div>
</div>
